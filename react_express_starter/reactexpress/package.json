{
  "name": "reactexpress",
  "version": "1.0.0",
  "description": "Boilerplate for React and Express",
  "main": "server.js",
  "scripts": {
    "_comment": "Automatically installs client if needed",
    "client-install" : "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "_comment": "Starts the program automatically without terminals",
    "client": "npm start --prefix client",
    "dev" : "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Nimesh Silva",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.1.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
